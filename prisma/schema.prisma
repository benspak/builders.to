enum TokenTransactionType {
  WELCOME_BONUS             // New user signup bonus (5 tokens)
  REFERRAL_REWARD           // Referrer gets tokens when referee signs up (10 tokens)
  STREAK_BONUS              // Bonus for maintaining daily update streaks
  ENGAGEMENT_BONUS          // Bonus for posting updates, commenting, etc.
  PROFILE_COMPLETION        // Bonus for reaching 100% profile completeness (10 tokens)
  AD_REDEMPTION             // Spent tokens to unlock an advertisement
  SERVICE_REDEMPTION        // Spent tokens to unlock a service listing
  LOCAL_LISTING_REDEMPTION  // Spent tokens to unlock a local listing
  GIFT_SENT                 // Tokens sent as a gift to another user
  GIFT_RECEIVED             // Tokens received as a gift from another user
  GIFT_PURCHASED            // Tokens purchased to gift (paid with Stripe)
  ADMIN_ADJUSTMENT          // Manual adjustment by admin
}

// Track all token movements for audit/history
model TokenTransaction {
