// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // Profile fields
  slug                   String? @unique // For public profile URLs (auto-set from X username)
  username               String? // X/Twitter username (handle), captured at signup
  displayName            String? // User-chosen display name (alternative to first/last name)
  firstName              String?
  lastName               String?
  zipCode                String? // Legacy field, kept for backward compatibility
  city                   String? // User's city
  state                  String? // Legacy field, kept for backward compatibility (US state abbreviation)
  country                String? // User's country
  locationSlug           String? // URL-friendly location slug for Builders Local (e.g., "san-francisco-usa")
  latitude               Float? // Geocoded latitude for map display
  longitude              Float? // Geocoded longitude for map display
  headline               String?
  bio                    String? @db.Text
  websiteUrl             String?
  twitterUrl             String?
  youtubeUrl             String?
  linkedinUrl            String?
  twitchUrl              String? // Twitch channel URL
  githubUrl              String? // GitHub profile URL
  producthuntUrl         String? // Product Hunt profile URL
  featuredVideoUrl       String? // Featured video URL (YouTube/Twitch video to showcase)
  profileBackgroundImage String? // Custom background image for profile page (replaces default gradient)
  calendarUrl            String? // Calendar booking link (Calendly, Cal.com, etc.)

  // Profile status - what the user is currently up to
  status          String? // Short status message (e.g., "Building a new feature ðŸš€")
  statusUpdatedAt DateTime? // When the status was last updated

  // Intent flags - Builder Operating System
  openToWork           Boolean @default(false)
  lookingForCofounder  Boolean @default(false)
  availableForContract Boolean @default(false)
  openToMeeting        Boolean @default(false)

  // Streak tracking
  currentStreak    Int       @default(0) // Current consecutive days with updates
  longestStreak    Int       @default(0) // Longest streak ever
  lastActivityDate DateTime? // Last date of activity for streak calculation

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts           Account[]
  sessions           Session[]
  projects           Project[]
  upvotes            Upvote[]
  comments           Comment[]
  commentLikes       CommentLike[]
  companies          Company[]
  companyMemberships CompanyMember[] // Companies where user is a team member
  dailyUpdates       DailyUpdate[]
  updateLikes        UpdateLike[]
  updateComments     UpdateComment[]
  coBuilderOn        ProjectCoBuilder[] // Projects where user is a co-builder

  // Follows
  followers Follow[] @relation("FollowingRelation") // Users who follow this user
  following Follow[] @relation("FollowerRelation") // Users this user follows

  // Feed and notifications
  feedEventLikes    FeedEventLike[]
  feedEventComments FeedEventComment[]
  notifications     Notification[]
  emailPreferences  EmailPreferences?

  // Advertising
  advertisements Advertisement[]

  // Stripe Connect for Services Marketplace
  stripeConnectId        String? // Stripe Connect account ID
  stripeConnectOnboarded Boolean @default(false)

  // Services Marketplace
  serviceListings ServiceListing[]
  serviceOrders   ServiceOrder[]   @relation("ServiceBuyer")

  // Local Listings
  localListings               LocalListing[]
  localListingComments        LocalListingComment[]
  localListingFlags           LocalListingFlag[]
  localListingRatingsGiven    LocalListingRating[]  @relation("LocalListingRater")
  localListingRatingsReceived LocalListingRating[]  @relation("LocalListingRated")
  localListingOrders          LocalListingOrder[]   @relation("LocalListingBuyer")

  // Push Notification Subscriptions
  pushSubscriptions PushSubscription[]

  // Two-Factor Authentication
  twoFactorEnabled     Boolean  @default(false) // Whether 2FA is enabled
  twoFactorSecret      String? // Encrypted TOTP secret
  twoFactorBackupCodes String[] // Encrypted backup codes

  // Pro Subscription
  proSubscription ProSubscription?

  // Pinned Posts
  pinnedPosts PinnedPost[]

  // Profile Views (for "People also viewed" feature)
  profileViews           ProfileView[] @relation("ProfileViewed") // Views of this profile
  profileViewsAsViewer   ProfileView[] @relation("ProfileViewer") // Profiles this user has viewed
  profileViewsAsReferrer ProfileView[] @relation("ProfileReferrer") // Views where this profile was the referrer

  // Cross-Platform Posting
  platformConnections PlatformConnection[]
  crossPosts          CrossPost[]
  agentSuggestions    AgentSuggestion[]
  aiProfile           UserAIProfile?

  // Pro User Rewards System
  postRewards  PostReward[]
  userEarnings UserEarnings?
  payouts      Payout[]

  // Events & Meetups
  organizedEvents Event[]         @relation("EventOrganizer")
  eventAttendees  EventAttendee[]
  eventComments   EventComment[]

  // Direct Messaging
  conversationParticipants ConversationParticipant[]
  sentMessages             Message[]

  // Coworking Buddy Matching
  hostedSessions   CoworkingSession[] @relation("CoworkingHost")
  coworkingBuddies CoworkingBuddy[]

  @@index([slug])
  @@index([stripeConnectId])
  @@index([locationSlug])
}

model Project {
  id          String        @id @default(cuid())
  slug        String?       @unique // Temporarily optional for migration
  title       String
  tagline     String
  description String?       @db.Text
  url         String?
  githubUrl   String?
  imageUrl    String? // Main screenshot/cover image
  status      ProjectStatus @default(IDEA)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Artifact links - make projects compound value
  demoUrl      String? // Live demo link
  docsUrl      String? // Documentation link
  changelogUrl String? // Changelog/release notes link

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)

  upvotes           Upvote[]
  comments          Comment[]
  images            ProjectImage[]
  milestones        ProjectMilestone[]
  coBuilders        ProjectCoBuilder[]
  notifications     Notification[]
  servicePortfolios ServicePortfolio[] // Projects linked as proof-of-work for services
  views             ProjectView[] // View tracking
  clicks            ProjectClick[] // Click tracking

  @@index([userId])
  @@index([createdAt])
  @@index([companyId])
}

// Project co-builders - allows multiple builders to be credited on a project
model ProjectCoBuilder {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  projectId String
  userId    String

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId]) // A user can only be a co-builder once per project
  @@index([projectId])
  @@index([userId])
}

model ProjectImage {
  id        String   @id @default(cuid())
  url       String
  caption   String?
  order     Int      @default(0)
  createdAt DateTime @default(now())

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([order])
}

model Upvote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId    String
  projectId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@index([projectId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  projectId String

  // Threading support - self-referential relation for reply chains
  parentId String?
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  Comment[] @relation("CommentReplies")

  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  likes   CommentLike[]

  @@index([projectId])
  @@index([userId])
  @@index([parentId])
}

// Likes on project comments
model CommentLike {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId    String
  commentId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@index([commentId])
}

enum ProjectStatus {
  IDEA
  BUILDING
  BETA
  LAUNCHED
  PAUSED
  ACQUIRED
}

// Predefined milestone types for project lifecycle tracking
enum MilestoneType {
  V1_SHIPPED // v1 shipped
  FIRST_USER // First user/signup
  FIRST_CUSTOMER // First paying customer
  MRR_1K // $1k MRR
  MRR_10K // $10k MRR
  PROFITABLE // Reached profitability
  TEAM_HIRE // First hire
  FUNDING // Received funding
  PIVOT // Major pivot
  CUSTOM // Custom milestone
}

// Project milestones - longitudinal record of execution
model ProjectMilestone {
  id          String        @id @default(cuid())
  type        MilestoneType
  title       String? // Custom title (optional, used for CUSTOM type)
  description String?       @db.Text
  achievedAt  DateTime      @default(now()) // When milestone was achieved
  createdAt   DateTime      @default(now())

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Link to feed event
  feedEvent FeedEvent?

  @@index([projectId])
  @@index([achievedAt])
}

enum CompanyCategory {
  SAAS
  AGENCY
  FINTECH
  ECOMMERCE
  HEALTHTECH
  EDTECH
  AI_ML
  DEVTOOLS
  MEDIA
  MARKETPLACE
  OTHER
}

enum CompanySize {
  SIZE_1_10
  SIZE_11_50
  SIZE_51_200
  SIZE_201_500
  SIZE_500_PLUS
}

// Traction badge enums
enum CustomerRange {
  RANGE_0 // No customers yet
  RANGE_1_10 // 1-10 customers
  RANGE_11_50 // 11-50 customers
  RANGE_51_100 // 51-100 customers
  RANGE_101_500 // 101-500 customers
  RANGE_500_PLUS // 500+ customers
}

enum UserRange {
  RANGE_0 // No users yet
  RANGE_1_100 // 1-100 users
  RANGE_101_1K // 101-1,000 users
  RANGE_1K_10K // 1,000-10,000 users
  RANGE_10K_100K // 10,000-100,000 users
  RANGE_100K_PLUS // 100,000+ users
}

enum RevenueRange {
  RANGE_0 // Pre-revenue
  RANGE_1_10K // $1-$10K ARR
  RANGE_10K_50K // $10K-$50K ARR
  RANGE_50K_100K // $50K-$100K ARR
  RANGE_100K_500K // $100K-$500K ARR
  RANGE_500K_1M // $500K-$1M ARR
  RANGE_1M_5M // $1M-$5M ARR
  RANGE_5M_PLUS // $5M+ ARR
}

enum FundingStage {
  PRE_SEED
  SEED
  SERIES_A
  SERIES_B
  SERIES_C_PLUS
}

// Role/Gig types
enum RoleType {
  FULL_TIME
  PART_TIME
  CONTRACT
  FREELANCE
  COFOUNDER
  ADVISOR
  INTERN
}

enum RoleCategory {
  ENGINEERING
  DESIGN
  PRODUCT
  MARKETING
  SALES
  OPERATIONS
  FINANCE
  LEGAL
  SUPPORT
  OTHER
}

enum CompensationType {
  SALARY
  HOURLY
  PROJECT
  EQUITY_ONLY
  SALARY_PLUS_EQUITY
}

model Company {
  id           String          @id @default(cuid())
  slug         String?         @unique // Temporarily optional for migration
  name         String
  logo         String?
  location     String?
  locationSlug String? // URL-friendly location slug for Builders Local (e.g., "san-francisco")
  category     CompanyCategory @default(OTHER)
  about        String?         @db.Text
  website      String?
  size         CompanySize?
  yearFounded  Int?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  // Tech Stack / Tooling
  techStack String[] // Array of technologies used (e.g., ["React", "PostgreSQL", "AWS"])
  tools     String[] // Tools and services used (e.g., ["Figma", "Linear", "Slack"])

  // Traction Badges - proof of traction
  customerCount    CustomerRange? // Range of customers
  revenueRange     RevenueRange? // ARR/MRR range
  userCount        UserRange? // Range of users
  isBootstrapped   Boolean        @default(false)
  isProfitable     Boolean        @default(false)
  hasRaisedFunding Boolean        @default(false)
  fundingStage     FundingStage? // Pre-seed, Seed, Series A, etc.

  // Opportunity Hub flags
  isHiring         Boolean @default(false) // Quick filter for hiring companies
  acceptsContracts Boolean @default(false) // Open for contract work

  userId   String
  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects Project[]
  updates  CompanyUpdate[]
  roles    CompanyRole[]
  members  CompanyMember[] // Team members of the company

  @@index([userId])
  @@index([category])
  @@index([isHiring])
  @@index([locationSlug])
}

// Company members - allows multiple users to be part of a company with different roles
enum CompanyMemberRole {
  OWNER // Full control, can delete company
  ADMIN // Can edit company and manage members
  MEMBER // Can view and post updates
}

model CompanyMember {
  id        String            @id @default(cuid())
  role      CompanyMemberRole @default(MEMBER)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  companyId String
  userId    String

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([companyId, userId]) // A user can only be a member once per company
  @@index([companyId])
  @@index([userId])
}

// Company Updates - internal build logs / announcements
model CompanyUpdate {
  id        String   @id @default(cuid())
  content   String   @db.Text // The update content (supports markdown)
  imageUrl  String? // Optional image attachment
  isPinned  Boolean  @default(false) // Pin important updates to top
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  // Author of the update (company owner or team member)
  authorId String

  @@index([companyId])
  @@index([createdAt])
  @@index([isPinned])
}

// Company Roles - open positions and gigs
model CompanyRole {
  id          String       @id @default(cuid())
  title       String // Job title
  description String?      @db.Text // Full job description
  type        RoleType     @default(FULL_TIME)
  category    RoleCategory @default(ENGINEERING)

  // Location
  location String? // Location or "Remote"
  isRemote Boolean @default(false)
  timezone String? // Preferred timezone (e.g., "PST", "UTCÂ±3")

  // Compensation
  compensationType CompensationType?
  salaryMin        Int? // Minimum salary (annual or hourly based on type)
  salaryMax        Int? // Maximum salary
  currency         String?           @default("USD")
  equityMin        Float? // Minimum equity % (e.g., 0.1 for 0.1%)
  equityMax        Float? // Maximum equity %

  // Requirements
  skills        String[] // Required skills
  experienceMin Int? // Minimum years of experience
  experienceMax Int? // Maximum years of experience

  // Status
  isActive         Boolean @default(true) // Is the role still open?
  applicationUrl   String? // External application link
  applicationEmail String? // Email to apply

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expiresAt DateTime? // When the listing expires

  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  // Link to feed event
  feedEvent FeedEvent?

  @@index([companyId])
  @@index([isActive])
  @@index([type])
  @@index([category])
  @@index([createdAt])
}

// Site analytics - page views tracking
model SiteView {
  id        String   @id @default(cuid())
  path      String // The page path visited
  createdAt DateTime @default(now())

  // Optional: track visitor info (anonymized)
  visitorId String? // Anonymous session identifier
  userAgent String?

  @@index([createdAt])
  @@index([path])
}

// Daily updates - builder progress updates
model DailyUpdate {
  id        String   @id @default(cuid())
  content   String   @db.Text // The update content
  imageUrl  String? // Optional image attachment
  gifUrl    String? // Optional GIF attachment from Giphy
  videoUrl  String? // Optional YouTube video URL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Poll attachment (optional) - X/Twitter style polls
  pollQuestion  String? // Poll question (if this update has a poll)
  pollExpiresAt DateTime? // When the poll ends (7 days from creation)

  userId        String
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes         UpdateLike[]
  comments      UpdateComment[]
  notifications Notification[]
  views         UpdateView[] // View tracking
  pinnedBy      PinnedPost[] // Users who have pinned this update
  pollOptions   UpdatePollOption[] // Poll options if this is a poll update
  pollVotes     UpdatePollVote[] // Votes on the poll
  rewards       PostReward[] // Rewards earned from this update

  @@index([userId])
  @@index([createdAt])
}

// Poll options for updates (up to 5 per update)
model UpdatePollOption {
  id    String @id @default(cuid())
  text  String // Option text (max 50 chars)
  order Int    @default(0) // Display order

  updateId String
  update   DailyUpdate @relation(fields: [updateId], references: [id], onDelete: Cascade)

  votes UpdatePollVote[]

  @@index([updateId])
}

// Poll votes - one vote per user per update poll
model UpdatePollVote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId   String
  optionId String
  updateId String // Denormalized for efficient querying

  option UpdatePollOption @relation(fields: [optionId], references: [id], onDelete: Cascade)
  update DailyUpdate      @relation(fields: [updateId], references: [id], onDelete: Cascade)

  @@unique([userId, updateId]) // One vote per user per update poll
  @@index([optionId])
  @@index([updateId])
}

// Likes on daily updates
model UpdateLike {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId   String
  updateId String

  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  update DailyUpdate @relation(fields: [updateId], references: [id], onDelete: Cascade)

  @@unique([userId, updateId])
  @@index([updateId])
}

// Comments on daily updates
model UpdateComment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  gifUrl    String? // Optional GIF attachment from Giphy
  imageUrl  String? // Optional image attachment
  videoUrl  String? // Optional video embed URL (YouTube)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Poll attachment (optional) - X/Twitter style polls
  pollQuestion  String? // Poll question (if this comment has a poll)
  pollExpiresAt DateTime? // When the poll ends (7 days from creation)

  userId   String
  updateId String

  // Threading support - self-referential relation for reply chains
  parentId String?
  parent   UpdateComment?  @relation("UpdateCommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  UpdateComment[] @relation("UpdateCommentReplies")

  user          User                      @relation(fields: [userId], references: [id], onDelete: Cascade)
  update        DailyUpdate               @relation(fields: [updateId], references: [id], onDelete: Cascade)
  pollOptions   UpdateCommentPollOption[] // Poll options if this is a poll comment
  pollVotes     UpdateCommentPollVote[] // Votes on the poll
  notifications Notification[] // Notifications that reference this comment

  @@index([updateId])
  @@index([userId])
  @@index([parentId])
}

// Poll options for update comments (up to 5 per comment)
model UpdateCommentPollOption {
  id    String @id @default(cuid())
  text  String // Option text (max 50 chars)
  order Int    @default(0) // Display order

  commentId String
  comment   UpdateComment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  votes UpdateCommentPollVote[]

  @@index([commentId])
}

// Poll votes for update comments - one vote per user per comment poll
model UpdateCommentPollVote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId    String
  optionId  String
  commentId String // Denormalized for efficient querying

  option  UpdateCommentPollOption @relation(fields: [optionId], references: [id], onDelete: Cascade)
  comment UpdateComment           @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId]) // One vote per user per comment poll
  @@index([optionId])
  @@index([commentId])
}

// User follows - social connections between builders
model Follow {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  followerId  String // User doing the following
  followingId String // User being followed

  follower  User @relation("FollowerRelation", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("FollowingRelation", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId]) // Can only follow a user once
  @@index([followingId])
  @@index([followerId])
}

// Feed event types
enum FeedEventType {
  MILESTONE_ACHIEVED // Project hit a milestone
  PROJECT_LAUNCHED // Project status changed to LAUNCHED
  PROJECT_ACQUIRED // Project was acquired
  STATUS_UPDATE // User updated their profile status
  PROJECT_STATUS_CHANGE // Project status changed (any transition)
  PROJECT_CREATED // A new project was created
  JOB_POSTED // A new job/role was posted by a company
  USER_JOINED // A new user signed up
  LISTING_CREATED // A new local listing was created
  EVENT_CREATED // A new community event was created
  // COWORKING_SESSION_CREATED // Temporarily disabled until migration is applied to production
}

// Feed events - aggregated activity feed
model FeedEvent {
  id        String        @id @default(cuid())
  type      FeedEventType
  createdAt DateTime      @default(now())

  // The user who triggered the event (project owner)
  userId String

  // Related entities (polymorphic references)
  projectId           String?
  milestoneId         String? @unique // For milestone events
  companyRoleId       String? @unique // For job posted events
  localListingId      String? @unique // For listing created events
  eventId             String? @unique // For event created events
  // coworkingSessionId  String? @unique // Temporarily disabled until migration is applied to production

  // Denormalized data for fast feed rendering
  title       String // e.g., "shipped v1" or "hit $1k MRR"
  description String? @db.Text

  // Relations
  milestone         ProjectMilestone?  @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  companyRole       CompanyRole?       @relation(fields: [companyRoleId], references: [id], onDelete: Cascade)
  localListing      LocalListing?      @relation(fields: [localListingId], references: [id], onDelete: Cascade)
  event             Event?             @relation(fields: [eventId], references: [id], onDelete: Cascade)
  // coworkingSession  CoworkingSession?  @relation(fields: [coworkingSessionId], references: [id], onDelete: Cascade) // Temporarily disabled
  likes             FeedEventLike[]
  comments          FeedEventComment[]
  notifications     Notification[]

  @@index([createdAt])
  @@index([userId])
  @@index([projectId])
  @@index([companyRoleId])
  @@index([localListingId])
  @@index([eventId])
  // @@index([coworkingSessionId]) // Temporarily disabled
}

// Likes on feed events
model FeedEventLike {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId      String
  feedEventId String

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  feedEvent FeedEvent @relation(fields: [feedEventId], references: [id], onDelete: Cascade)

  @@unique([userId, feedEventId])
  @@index([feedEventId])
}

// Comments on feed events (for all feed item types)
model FeedEventComment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  gifUrl    String? // Optional GIF attachment from Giphy
  imageUrl  String? // Optional image attachment
  videoUrl  String? // Optional video embed URL (YouTube)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Poll attachment (optional) - X/Twitter style polls
  pollQuestion  String? // Poll question (if this comment has a poll)
  pollExpiresAt DateTime? // When the poll ends (7 days from creation)

  userId      String
  feedEventId String

  // Threading support - self-referential relation for reply chains
