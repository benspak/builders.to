// ============================================
// Services Marketplace - Builder-to-Builder
// ============================================

enum ServiceCategory {
  MVP_BUILD
  DESIGN
  MARKETING
  AI_INTEGRATION
  DEVOPS
  AUDIT
  OTHER
}

enum ServiceListingStatus {
  DRAFT
  PENDING_PAYMENT
  ACTIVE
  EXPIRED
  PAUSED
}

enum ServiceOrderStatus {
  PENDING_ACCEPTANCE
  ACCEPTED
  IN_PROGRESS
  DELIVERED
  COMPLETED
  DISPUTED
  CANCELLED
  REFUNDED
}

// Service listings - services offered by builders
model ServiceListing {
  id                String               @id @default(cuid())
  slug              String?              @unique
  title             String
  description       String               @db.Text
  category          ServiceCategory
  priceInCents      Int                  // Service price
  deliveryDays      Int                  // Estimated delivery time
  status            ServiceListingStatus @default(DRAFT)

  // Stripe checkout for listing fee
  stripeSessionId   String?              @unique

  // Listing period (90 days from activation)
  activatedAt       DateTime?
  expiresAt         DateTime?

  // Relations
  userId            String
  user              User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  portfolioProjects ServicePortfolio[]   // Linked proof-of-work projects
  orders            ServiceOrder[]

  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  @@index([userId])
  @@index([category])
  @@index([status])
  @@index([expiresAt])
}

// Service portfolio - links projects as proof-of-work for a service
model ServicePortfolio {
  id              String         @id @default(cuid())
  serviceId       String
  projectId       String
  description     String?        // Why this project demonstrates capability

  service         ServiceListing @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  project         Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([serviceId, projectId])
  @@index([serviceId])
  @@index([projectId])
}

// Service orders - purchases of services
model ServiceOrder {
  id                  String             @id @default(cuid())
  status              ServiceOrderStatus @default(PENDING_ACCEPTANCE)
  requirements        String?            @db.Text  // Buyer's requirements

  // Pricing at time of purchase
  priceInCents        Int                // Service price at time of purchase
  platformFeeInCents  Int?               // 5% platform fee

  // Stripe Connect payment
  stripePaymentIntent String?            @unique

  // Relations
  serviceId           String
  buyerId             String

  service             ServiceListing     @relation(fields: [serviceId], references: [id])
  buyer               User               @relation("ServiceBuyer", fields: [buyerId], references: [id])

  // Timestamps
  acceptedAt          DateTime?
  deliveredAt         DateTime?
  completedAt         DateTime?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@index([serviceId])
  @@index([buyerId])
  @@index([status])
}

// ============================================
// Local Listings - Craigslist-style classifieds
// ============================================

enum LocalListingCategory {
  COMMUNITY         // General community posts
  SERVICES          // $1 per 90 days
  DISCUSSION        // Conversations/questions
  COWORKING_HOUSING // Space listings
  FOR_SALE          // Items for sale
  // Note: JOBS uses existing CompanyRole model
}

enum LocalListingStatus {
  DRAFT
  PENDING_PAYMENT   // For SERVICES only
  ACTIVE
  EXPIRED
  FLAGGED
  REMOVED
}

// Local listings - craigslist-style classifieds by location
model LocalListing {
  id              String               @id @default(cuid())
  slug            String               @unique
  title           String
  description     String               @db.Text
  category        LocalListingCategory
  status          LocalListingStatus   @default(DRAFT)

  // Location (default from user profile, overrideable)
  locationSlug    String
  city            String
  state           String
  zipCode         String?

  // Contact
  contactEmail    String?
  contactPhone    String?
  contactUrl      String?

  // For SERVICES category only (paid $1)
  stripeSessionId String?              @unique
