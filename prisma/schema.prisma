// Images attached to local listings
model LocalListingImage {
  id          String       @id @default(cuid())
  url         String
  caption     String?
  order       Int          @default(0)
  createdAt   DateTime     @default(now())

  listingId   String
  listing     LocalListing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId])
  @@index([order])
}

// Comments on local listings
model LocalListingComment {
  id          String       @id @default(cuid())
  content     String       @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  userId      String
  listingId   String

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing     LocalListing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId])
  @@index([userId])
  @@index([createdAt])
}

// Flag/report a listing
enum LocalListingFlagReason {
  SPAM
  INAPPROPRIATE
  SCAM
  DUPLICATE
  WRONG_CATEGORY
  OTHER
}

model LocalListingFlag {
  id          String                  @id @default(cuid())
  reason      LocalListingFlagReason
  description String?                 @db.Text
  createdAt   DateTime                @default(now())

  userId      String
  listingId   String

  user        User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing     LocalListing            @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@unique([userId, listingId])  // One flag per user per listing
  @@index([listingId])
  @@index([reason])
}

// Rating for listing authors (separate from listing itself)
model LocalListingRating {
  id          String   @id @default(cuid())
  rating      Int      // 1-5 stars
  comment     String?  @db.Text
  createdAt   DateTime @default(now())

  raterId     String   // User giving the rating
  ratedUserId String   // User receiving the rating
  listingId   String   // The listing this rating is associated with

  rater       User     @relation("LocalListingRater", fields: [raterId], references: [id], onDelete: Cascade)
  ratedUser   User     @relation("LocalListingRated", fields: [ratedUserId], references: [id], onDelete: Cascade)

  @@unique([raterId, listingId])  // One rating per user per listing
  @@index([ratedUserId])
  @@index([listingId])
}

