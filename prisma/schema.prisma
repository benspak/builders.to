  postingStyle Json? // Style preferences
  autoSuggest  Boolean  @default(true) // Whether to auto-generate suggestions
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// Pro User Rewards System - Pay pro users for posting
// ============================================

enum RewardStatus {
  PENDING // Awaiting payout
  PROCESSING // Payout in progress
  PAID // Successfully paid out
  FAILED // Payout failed
  CANCELLED // Cancelled by admin
}

enum RewardType {
  BASE_POST // Base $0.05 for posting
  ENGAGEMENT_BONUS // Bonus from likes (up to $0.02)
}

// Individual rewards earned from posts
model PostReward {
  id            String       @id @default(cuid())
  userId        String
  dailyUpdateId String
  type          RewardType
  amount        Int // Amount in cents (use decimal math in code for sub-cent)
  status        RewardStatus @default(PENDING)
  payoutId      String? // Reference to Payout record when paid
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  dailyUpdate DailyUpdate @relation(fields: [dailyUpdateId], references: [id], onDelete: Cascade)
  payout      Payout?     @relation(fields: [payoutId], references: [id])

  @@index([userId])
  @@index([dailyUpdateId])
  @@index([status])
  @@index([payoutId])
}

// Aggregated user earnings tracking
model UserEarnings {
  id               String    @id @default(cuid())
  userId           String    @unique
  pendingAmount    Int       @default(0) // Cents awaiting payout (stored as integer, sub-cents handled in code)
  lifetimeEarnings Int       @default(0) // Total cents earned all-time
  earnedToday      Boolean   @default(false) // Whether user earned reward today (reset daily)
  lastPostDate     DateTime? // For daily reset tracking
  lastPayoutAt     DateTime?
  isPaused         Boolean   @default(false) // Admin pause flag
  isFlagged        Boolean   @default(false) // Admin fraud flag
  flagReason       String? // Reason for flagging
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isPaused])
  @@index([isFlagged])
}

// Payout records - batches of rewards paid out together
model Payout {
  id               String       @id @default(cuid())
  userId           String
  amount           Int // Amount in cents
  status           RewardStatus @default(PROCESSING)
  stripeTransferId String? // Stripe Transfer ID
  failureReason    String? // Error message if failed
  createdAt        DateTime     @default(now())
  completedAt      DateTime?

  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  rewards PostReward[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

// Platform-wide reward settings (singleton-ish, one active config)
model RewardSettings {
  id                   String   @id @default("default")
  baseRewardCents      Int      @default(5) // $0.05 base rate
  engagementBonusCents Int      @default(1) // $0.005 per tier (stored as 0.5 cents, use decimal in code)
  likesPerTier         Int      @default(5) // 5 likes = 1 tier
  maxBonusCents        Int      @default(2) // $0.02 max engagement bonus
  minCharCount         Int      @default(100) // Minimum characters for eligible post
  maxPostsPerDay       Int      @default(1) // 1 post per day can earn
  minPayoutCents       Int      @default(500) // $5 minimum for payout
  globalPayoutsPaused  Boolean  @default(false) // Pause all payouts platform-wide
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

// Content hashes for duplicate detection
model PostContentHash {
  id        String   @id @default(cuid())
  userId    String
  hash      String // SHA-256 of normalized content
  createdAt DateTime @default(now())

  @@unique([userId, hash])
  @@index([userId])
}

// ============================================
// Events & Meetups System
// ============================================

enum EventRsvpStatus {
  GOING
  INTERESTED
  NOT_GOING
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text

  // Date/time
  startsAt DateTime
  endsAt   DateTime?
  timezone String    @default("UTC")

  // Location (virtual or physical)
  isVirtual  Boolean @default(false)
  virtualUrl String? // Video call link for virtual events
  venue      String? // Venue name
  address    String? // Full address
  city       String?
  state      String?
  country    String?
  latitude   Float?
  longitude  Float?

  // Capacity and settings
  maxAttendees Int?
  isPublic     Boolean @default(true) // Public events visible to all

  // Metadata
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  organizerId String
  organizer   User            @relation("EventOrganizer", fields: [organizerId], references: [id], onDelete: Cascade)
  attendees   EventAttendee[]
  comments    EventComment[]
  feedEvent   FeedEvent?

  @@index([startsAt])
  @@index([city, country])
  @@index([organizerId])
  @@index([isPublic, startsAt])
}

model EventAttendee {
  id        String          @id @default(cuid())
  status    EventRsvpStatus @default(GOING)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  userId  String
  eventId String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([eventId])
  @@index([status])
}

// Comments on events
model EventComment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId  String
  eventId String

  // Threading support
  parentId String?
  parent   EventComment?  @relation("EventCommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  EventComment[] @relation("EventCommentReplies")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@index([userId])
  @@index([parentId])
}

// ============================================
// Direct Messaging System
// ============================================

model Conversation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  participants ConversationParticipant[]
  messages     Message[]
}

model ConversationParticipant {
  id         String    @id @default(cuid())
  lastReadAt DateTime?
  mutedUntil DateTime?
  isArchived Boolean   @default(false)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  userId         String
  conversationId String

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@unique([userId, conversationId])
  @@index([conversationId])
  @@index([userId])
}

model Message {
  id        String    @id @default(cuid())
  content   String    @db.Text
  gifUrl    String? // Optional GIF attachment
  imageUrl  String? // Optional image attachment
  createdAt DateTime  @default(now())
  editedAt  DateTime?

  senderId       String
  conversationId String

  sender       User         @relation(fields: [senderId], references: [id], onDelete: Cascade)
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([senderId])
}

// ============================================
// Coworking Buddy Matching System
// ============================================

enum VenueType {
  CAFE
  COWORKING_SPACE
  LIBRARY
  OTHER
}

enum BuddyStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model CoworkingSession {
  id String @id @default(cuid())

  // When
  date      DateTime @db.Date
  startTime String // "09:00" format
  endTime   String? // "17:00" or null for flexible

  // Where
  venueName String
  venueType VenueType
  address   String?
  city      String
  state     String?
  country   String
  latitude  Float?
  longitude Float?

  // Details
  maxBuddies  Int     @default(1)
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  hostId    String
  host      User             @relation("CoworkingHost", fields: [hostId], references: [id], onDelete: Cascade)
  buddies   CoworkingBuddy[]
  // feedEvent FeedEvent? // Temporarily disabled until migration is applied to production

  @@index([date, city])
  @@index([hostId])
  @@index([city, country])
}

model CoworkingBuddy {
  id        String      @id @default(cuid())
  status    BuddyStatus @default(PENDING)
  message   String? // Optional message when requesting to join
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  userId    String
  sessionId String

  user    User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  session CoworkingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([userId, sessionId])
  @@index([sessionId])
  @@index([status])
}
