// Per-platform post status - tracks publishing status for each platform
model CrossPlatformPost {
  id             String          @id @default(cuid())
  crossPostId    String
  platform       SocialPlatform
  platformPostId String? // ID on the external platform
  url            String? // URL to the post on the platform
  status         CrossPostStatus @default(DRAFT)
  error          String? // Error message if failed
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  crossPost CrossPost @relation(fields: [crossPostId], references: [id], onDelete: Cascade)

  @@unique([crossPostId, platform])
  @@index([crossPostId])
  @@index([platform])
  @@index([status])
}

// Media attachments for cross-posts
model CrossPostMedia {
