// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // Profile fields
  slug          String?   @unique  // For public profile URLs
  firstName     String?
  lastName      String?
  zipCode       String?
  city          String?   // Derived from zipCode
  state         String?   // Derived from zipCode
  headline      String?
  bio           String?   @db.Text
  websiteUrl    String?
  twitterUrl    String?
  youtubeUrl    String?
  linkedinUrl   String?

  // Intent flags - Builder Operating System
  openToWork          Boolean @default(false)
  lookingForCofounder Boolean @default(false)
  availableForContract Boolean @default(false)

  // Streak tracking
  currentStreak       Int     @default(0)  // Current consecutive days with updates
  longestStreak       Int     @default(0)  // Longest streak ever
  lastActivityDate    DateTime? // Last date of activity for streak calculation

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  projects       Project[]
  upvotes        Upvote[]
  comments       Comment[]
  companies      Company[]
  roastMVPs      RoastMVP[]
  dailyUpdates   DailyUpdate[]
  updateLikes    UpdateLike[]
  updateComments UpdateComment[]

  // Endorsements
  endorsementsGiven    Endorsement[] @relation("EndorserRelation")
  endorsementsReceived Endorsement[] @relation("EndorseeRelation")

  // Feed and notifications
  feedEventLikes       FeedEventLike[]
  notifications        Notification[]
  emailPreferences     EmailPreferences?

  @@index([slug])
}

model Project {
  id          String        @id @default(cuid())
  slug        String?       @unique  // Temporarily optional for migration
  title       String
  tagline     String
  description String?       @db.Text
  url         String?
  githubUrl   String?
  imageUrl    String?       // Main screenshot/cover image
  status      ProjectStatus @default(IDEA)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Artifact links - make projects compound value
  demoUrl      String?      // Live demo link
  docsUrl      String?      // Documentation link
  changelogUrl String?      // Changelog/release notes link

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)

  upvotes    Upvote[]
  comments   Comment[]
  images     ProjectImage[]
  roastMVP   RoastMVP?
  milestones ProjectMilestone[]

  @@index([userId])
  @@index([createdAt])
  @@index([companyId])
}

model ProjectImage {
  id        String   @id @default(cuid())
  url       String
  caption   String?
  order     Int      @default(0)
  createdAt DateTime @default(now())

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([order])
}

model Upvote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId    String
  projectId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@index([projectId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  projectId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([userId])
}

enum ProjectStatus {
  IDEA
  BUILDING
  BETA
  LAUNCHED
  PAUSED
  ACQUIRED
}

// Predefined milestone types for project lifecycle tracking
enum MilestoneType {
  V1_SHIPPED        // v1 shipped
  FIRST_USER        // First user/signup
  FIRST_CUSTOMER    // First paying customer
  MRR_1K            // $1k MRR
  MRR_10K           // $10k MRR
  PROFITABLE        // Reached profitability
  TEAM_HIRE         // First hire
  FUNDING           // Received funding
  PIVOT             // Major pivot
  CUSTOM            // Custom milestone
}

// Project milestones - longitudinal record of execution
model ProjectMilestone {
  id          String        @id @default(cuid())
  type        MilestoneType
  title       String?       // Custom title (optional, used for CUSTOM type)
  description String?       @db.Text
  achievedAt  DateTime      @default(now())  // When milestone was achieved
  createdAt   DateTime      @default(now())

  projectId   String
  project     Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Link to feed event
  feedEvent   FeedEvent?

  @@index([projectId])
  @@index([achievedAt])
}

enum CompanyCategory {
  SAAS
  AGENCY
  FINTECH
  ECOMMERCE
  HEALTHTECH
  EDTECH
  AI_ML
  DEVTOOLS
  MEDIA
  MARKETPLACE
  OTHER
}

enum CompanySize {
  SIZE_1_10
  SIZE_11_50
  SIZE_51_200
  SIZE_201_500
  SIZE_500_PLUS
}

model Company {
  id          String          @id @default(cuid())
  slug        String?         @unique  // Temporarily optional for migration
  name        String
  logo        String?
  location    String?
  category    CompanyCategory @default(OTHER)
  about       String?         @db.Text
  website     String?
  size        CompanySize?
  yearFounded Int?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  userId   String
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects Project[]

  @@index([userId])
  @@index([category])
}

// Roast my MVP - Featured project section
model RoastMVP {
  id              String         @id @default(cuid())
  projectId       String
  userId          String

  // Payment info
  stripeSessionId String?        @unique
  stripePaymentId String?
  amountPaid      Int            @default(2000) // $20.00 in cents
  status          RoastMVPStatus @default(PENDING_PAYMENT)

  // Queue management
  queuePosition   Int?           // Position in queue (null if not yet paid)

  // Feature dates
  featuredAt      DateTime?      // When the project was/will be featured
  expiresAt       DateTime?      // When the featuring ends (1 week after featuredAt)

  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  project         Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId]) // Each project can only be in the roast queue once
  @@index([status])
  @@index([queuePosition])
  @@index([userId])
}

enum RoastMVPStatus {
  PENDING_PAYMENT   // User started checkout but hasn't paid
  PAID              // Paid, in the queue waiting
  FEATURED          // Currently being featured
  COMPLETED         // Feature period is over
  CANCELLED         // Payment was refunded or cancelled
}

// Site analytics - page views tracking
model SiteView {
  id        String   @id @default(cuid())
  path      String   // The page path visited
  createdAt DateTime @default(now())

  // Optional: track visitor info (anonymized)
  visitorId String?  // Anonymous session identifier
  userAgent String?

  @@index([createdAt])
  @@index([path])
}

// Daily updates - builder progress updates
model DailyUpdate {
  id        String   @id @default(cuid())
  content   String   @db.Text  // The update content
  imageUrl  String?  // Optional image attachment
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes     UpdateLike[]
  comments  UpdateComment[]
  notifications Notification[]

  @@index([userId])
  @@index([createdAt])
}

// Likes on daily updates
model UpdateLike {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId    String
  updateId  String

  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  update    DailyUpdate @relation(fields: [updateId], references: [id], onDelete: Cascade)

  @@unique([userId, updateId])
  @@index([updateId])
}

// Comments on daily updates
model UpdateComment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  updateId  String

  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  update    DailyUpdate @relation(fields: [updateId], references: [id], onDelete: Cascade)

  @@index([updateId])
  @@index([userId])
}

// Builder endorsements - credibility signals
model Endorsement {
  id        String   @id @default(cuid())
  message   String?  @db.Text  // Optional endorsement message
  skill     String?            // Optional skill being endorsed (e.g., "Frontend", "Product")
  createdAt DateTime @default(now())

  endorserId String  // User giving the endorsement
  endorseeId String  // User receiving the endorsement

  endorser   User @relation("EndorserRelation", fields: [endorserId], references: [id], onDelete: Cascade)
  endorsee   User @relation("EndorseeRelation", fields: [endorseeId], references: [id], onDelete: Cascade)

  @@unique([endorserId, endorseeId])  // One endorsement per user pair
  @@index([endorseeId])
  @@index([endorserId])
}

// Feed event types
enum FeedEventType {
  MILESTONE_ACHIEVED   // Project hit a milestone
  PROJECT_LAUNCHED     // Project status changed to LAUNCHED
  PROJECT_ACQUIRED     // Project was acquired
}

// Feed events - aggregated activity feed
model FeedEvent {
  id          String        @id @default(cuid())
  type        FeedEventType
  createdAt   DateTime      @default(now())

  // The user who triggered the event (project owner)
  userId      String

  // Related entities (polymorphic references)
  projectId   String?
  milestoneId String?       @unique  // For milestone events

  // Denormalized data for fast feed rendering
  title       String        // e.g., "shipped v1" or "hit $1k MRR"
  description String?       @db.Text

  // Relations
  milestone   ProjectMilestone? @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  likes       FeedEventLike[]
  notifications Notification[]

  @@index([createdAt])
  @@index([userId])
  @@index([projectId])
}

// Likes on feed events
model FeedEventLike {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())

  userId      String
  feedEventId String

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  feedEvent   FeedEvent @relation(fields: [feedEventId], references: [id], onDelete: Cascade)

  @@unique([userId, feedEventId])
  @@index([feedEventId])
}

// Notification types
enum NotificationType {
  MILESTONE_LIKED      // Someone liked your milestone
  MILESTONE_CELEBRATED // Multiple people celebrated (batched)
  UPDATE_LIKED         // Someone liked your daily update
  USER_MENTIONED       // Someone mentioned you in an update
  WEEKLY_DIGEST        // Weekly summary notification
}

// In-app notifications
model Notification {
  id          String           @id @default(cuid())
  type        NotificationType
  title       String
  message     String?          @db.Text
  read        Boolean          @default(false)
  createdAt   DateTime         @default(now())

  // Recipient
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Optional link to related feed event
  feedEventId String?
  feedEvent   FeedEvent?       @relation(fields: [feedEventId], references: [id], onDelete: Cascade)

  // Optional link to related daily update
  updateId    String?
  update      DailyUpdate?     @relation(fields: [updateId], references: [id], onDelete: Cascade)

  // Actor who triggered the notification (if applicable)
  actorId     String?
  actorName   String?          // Denormalized for deleted users
  actorImage  String?

  @@index([userId, read])
  @@index([createdAt])
}

// Email preferences per user
model EmailPreferences {
  id                    String   @id @default(cuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  weeklyDigest          Boolean  @default(true)
  milestoneNotifications Boolean @default(true)

  // Track last digest sent
  lastDigestSentAt      DateTime?

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
