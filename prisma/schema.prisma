// ============================================
// Cross-Platform Posting System
// ============================================

enum SocialPlatform {
  TWITTER
  LINKEDIN
  BUILDERS
}

enum CrossPostStatus {
  DRAFT
  SCHEDULED
  PUBLISHING
  PUBLISHED
  FAILED
}

enum SuggestionStatus {
  PENDING
  APPROVED
  REJECTED
  PUBLISHED
}

enum CrossPostMediaType {
  IMAGE
  VIDEO
  LINK
}

// Platform connections - OAuth tokens for external platforms
model PlatformConnection {
  id               String         @id @default(cuid())
  userId           String
  platform         SocialPlatform
  platformUserId   String?
  platformUsername String?
  displayName      String?
  avatar           String?
  accessToken      String         @db.Text // Encrypted
  refreshToken     String?        @db.Text // Encrypted
  tokenExpiresAt   DateTime?
  scopes           String[]       @default([])
  followerCount    Int?
  connectedAt      DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
  @@index([userId])
  @@index([platform])
}

// Cross-platform posts - posts that can be published to multiple platforms
model CrossPost {
  id          String           @id @default(cuid())
  userId      String
  content     String           @db.Text
  platforms   SocialPlatform[]
  status      CrossPostStatus  @default(DRAFT)
  scheduledAt DateTime?
  publishedAt DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

